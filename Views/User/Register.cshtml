@model AmalCollections.VMs.RegisterVM

@{
    ViewData["Title"] = "Register";
    Layout = "LayoutLogin";
}
<br />
<br />

<style>
    input:focus {
        border: 1px solid black !important;
        box-shadow: 0px 0px 0.5px 0.5px rgba(0,0,0,0.75) !important;
    }
    #btn {
        background-color: black !important;
        color: white !important;
        width: 100%;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <h1 class="text-center">@ViewData["Title"]</h1>
    </div>
</div>
<br />
<br />
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form asp-action="Register" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input placeholder="First Name" asp-for="FirstName" class="form-control " />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input placeholder="Last Name" asp-for="LastName" class="form-control " />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input placeholder="Username" asp-for="Username" class="form-control " />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input placeholder="Password" asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input placeholder="Re-Enter Password" asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="btn" type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>
@section Scripts{
    <script src="~/js/site.js"></script>
    <script>
        $('document').ready(function () {
            //$.when(GetRoles()).done(function () {
            //    AITL($('#RoleId'), roles, 'role');
            //})
        })
    </script>
}


@model IEnumerable<AmalCollections.VMs.ProductVM>

@{
    ViewData["Title"] = "Products";
    Layout = "_Layout";
}
<div class="row">
    <div class="col-md-12">
        <h1 class="text-center">@ViewData["Title"]</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <a asp-action="Add" class="btn btn-black">Add New</a>
        <br />
        <br />
        <table id="myTable" class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        Brand
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brand.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-black" }) |
                        <button class="btnDelete btn btn-danger" onclick="Delete(@item.Id)">Delete</button>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-3"></div>
</div>
@section Scripts{
    <script>
        $('document').ready(function () {
            $('#myTable').DataTable();
        })

        function Delete(id) {
            var con = confirm('Do you want to delete this entity?');
            if (con) {
                $.ajax({
                    type: 'Get',
                    url: '/Product/Remove',
                    data: { Id: id },
                    success: function (dat) {
                        if (dat.includes('Error')) {
                            alert(dat);
                        }
                        else {
                            window.location.reload();
                        }
                    }
                })
            }
        }

    </script>
}

@model IEnumerable<AmalCollections.Data.OrderDetail>

@{
    ViewData["Title"] = "Orders";
}

<div class="row">
    <div class="col-md-12">
        <h1 class="text-center">@ViewData["Title"]</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table id="myTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        Order #
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Customer
                    </th>
                    <th>
                        Address
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DocId)
                        </td>
                        <td>
                            @(item.Date.ToShortDateString())
                        </td>
                        <td>
                            @(item.Customer.FirstName + item.Customer.LastName)
                        </td>
                        <td>
                            @item.Customer.Address
                        </td>
                        <td>
                            <a class="btn btn-sm btn-outline-success" asp-action="Detail" asp-controller="Order" asp-route-docId="@item.DocId">
                            <span class="fa fa-file-invoice"></span> Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts{
    <script>
        $('document').ready(function () {
            $('#myTable').DataTable();
        })
    </script>
}
